{% extends "adminBundle:admin:layout.html.twig" %}

{% block a %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Manipulation des articles</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Articles</a></li>
                <li class="breadcrumb-item active">Modification</li>
            </ol>
        </div>
        <div class="">
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>
        {{ form_start(form) }}
<div class="row">
    <div class="col-sm-12">
        <div class="card card-body">
            <form class="form-horizontal m-t-40">

                <div class="form-group">
                    <label>Titre de l'article</label>
            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Contenu de l'article</label>
                    {{ form_widget(form.contenu,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Image de l'article</label>
                    {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}
                </div>



        <center>
            <button type="submit" class="btn btn-success">
                <i class="fa fa-plus-circle"></i>
                Modifier
            </button>

        </center>
        {{ form_end(form) }}
            </form>
    </div>
    </div>
</div>
    </div>
    <div class="col-lg-3"></div>

{% endblock a %}
