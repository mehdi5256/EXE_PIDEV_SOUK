{% extends 'base.html.twig' %}
{% block content %}
{% block body %}
    <!-- column -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste de mes r√©clamations </h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Sujet</th>
                            <th>Contenu</th>
                            <th>Etat</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reclamation in reclamations %}
                            <tr>
                                <td><a href="{{ path('SAV_reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.sujet }}</a></td>
                                <td>{{ reclamation.contenu }}</td>
                                <td>{{ reclamation.etat }}</td>
                                <td>{% if reclamation.date %}{{ reclamation.date|date('Y-m-d') }}{% endif %}</td>

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% endblock %}
